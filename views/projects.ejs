<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/output.css">
    <title>Projects</title>
</head>
<body>
    <%- include('partials/navbar', { page: '/solutions/projects' }) %>
    <div class="container mx-auto p-4">
        <h1 class="text-3xl font-bold my-4">Projects</h1>
        <table class="table-auto border-collapse border border-gray-300 w-full my-4">
            <thead>
                <tr class="bg-gray-200">
                    <th class="border border-gray-300 px-4 py-2">Title</th>
                    <th class="border border-gray-300 px-4 py-2">Sector</th>
                    <th class="border border-gray-300 px-4 py-2">Summary</th>
                    <th class="border border-gray-300 px-4 py-2">Details</th>
                </tr>
            </thead>
            <tbody>
                <% projects.forEach(project => { %>
                    <tr class="hover:bg-gray-100">
                        <td class="border border-gray-300 px-4 py-2"><%= project.title %></td>
                        <td class="border border-gray-300 px-4 py-2">
                            <a class="text-blue-500 underline" href="/solutions/projects?sector=<%= project.sector %>">
                                <%= project.sector %>
                            </a>
                        </td>
                        <td class="border border-gray-300 px-4 py-2"><%= project.summary_short %></td>
                        <td class="border border-gray-300 px-4 py-2">
                            <a class="bg-blue-500 text-white px-4 py-2 rounded" href="/solutions/projects/<%= project.id %>">
                                Details
                            </a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
